    <!-- Help Bot Script -->
    <script>
        const responses = {
            "how to handle the website": "To handle the website, navigate through the dashboard where you can manage your profile, services, bookings, and more.",
            "whom to contact": "You can contact our support team through the Contact Us page, or reach out to support@skilllink.com.",
            "what is skill~link": "Skill~Link is a platform that connects skilled professionals with customers in need of their services.",
            "how to become a tasker": "To become a Tasker, click on the 'Become a Tasker' link on the header or in the sidebar, and complete the registration process."
        };

        function openHelpBot() {
            document.getElementById('help-bot-modal').style.display = 'block';
        }

        function closeHelpBot() {
            document.getElementById('help-bot-modal').style.display = 'none';
        }

        function handleUserInput(event) {
            if (event.key === 'Enter') {
                const userInput = document.getElementById('user-input').value.toLowerCase().trim();
                document.getElementById('user-input').value = '';
                displayMessage(userInput, 'user');

                setTimeout(() => {
                    const response = responses[userInput] || "I'm sorry, I don't understand that question. Please try asking something else.";
                    displayMessage(response, 'bot');
                }, 500);
            }
        }

        function displayMessage(message, sender) {
            const chatWindow = document.getElementById('chat-window');
            const messageElement = document.createElement('div');
            messageElement.style.marginBottom = '10px';
            messageElement.style.padding = '10px';
            messageElement.style.borderRadius = '5px';
            messageElement.style.backgroundColor = sender === 'user' ? '#d1e7ff' : '#f8f9fa';
            messageElement.style.textAlign = sender === 'user' ? 'right' : 'left';
            messageElement.innerText = message;
            chatWindow.appendChild(messageElement);
            chatWindow.scrollTop = chatWindow.scrollHeight; // Auto-scroll to the bottom
        }
    </script>
