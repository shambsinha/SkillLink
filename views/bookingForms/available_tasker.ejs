                /* General Styles */
body {
            margin: 0;
            padding: 20px; 
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #000000;
    color: #343a40;
}

body::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/image/back.jpg');
    background-size:cover;
    background-position: center;
    background-repeat:repeat;
    opacity: 0.7; /* Adjust this value to control the dimming effect */
    z-index: -1; /* Ensure the pseudo-element is behind the content */
}

.content {
    position: relative;
    z-index: 1; /* Ensure content is above the background */
}
     h2 {
            text-align: center;
            margin-bottom: 20px;
            color: white;
        }

        .tasker-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .tasker-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 300px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .tasker-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .tasker-card p {
            margin: 10px 0;
            font-size: 14px;
            color: #555;
        }

        .tasker-card p:first-child {
            font-weight: bold;
            font-size: 18px;
            color: #000;
        }

        .tasker-card .rating {
            font-weight: bold;
            color: #FFD700;
        }

        .tasker-card .fees {
            font-weight: bold;
            font-size: 16px;
            color: #28a745;
        }

        .tasker-card .contact {
            font-size: 14px;
            color: #007bff;
            text-decoration: none;
        }

        .tasker-card .contact:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .tasker-card {
                width: 100%;
            }
        }
    </style>
</head>
<body>

<h2>List of Taskers in Your Area</h2>

<div class="tasker-container">
    <% data.forEach(e => { %>
    <div class="tasker-card">
        <p><%= e.username %></p>
        <p><%= e.workArea %></p>
        <p><%= e.address %>, <%= e.zip %></p>
        <p class="contact">Phone: <%= e.phone %></p>
        <p class="contact">Email: <%= e.email %></p>
        <p class="rating">Rating: <%= e.rating %> ★</p>
        <p class="fees">Fees: ₹<%= e.fees %></p>
        <%=console.log(e._id)%>
       <a href="/book-appointment/<%=e._id%>"><button>Book Appointment</button></a>
    </div>
    <% }) %> 
</div>


</body>
</html>