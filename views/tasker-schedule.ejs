<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        h2 {
            margin: 1rem auto;
            color:#555;
            background-color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 25rem;
            height: 3rem;
            border: 1px solid yellow;
            border-radius: 2rem;
        }

        .tasker-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
        }

        .tasker-card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 15px;
            width: 300px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .tasker-card:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .tasker-card p {
            margin: 8px 0;
            color: #555;
        }

        .tasker-card p:first-of-type {
            font-size: 1.2em;
            font-weight: bold;
            color: #000;
        }

        .tasker-card p:nth-of-type(2) {
            font-size: 1em;
            color: #666;
        }

        .tasker-card p:last-of-type.contact {
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<%- include('./partials/header') %>
<h2>List of Works</h2>

<div class="tasker-container">
    <% data.forEach(e => { %>
    <div class="tasker-card">
        <p><%= e.name %></p>
        <p><%= e.work %></p>
        <p><%= e.address %>, <%= e.zip %></p>
        <p><%= e.state %></p>
        <p class="contact">Phone: <%= e.phone %></p>
        <%=console.log(e._id)%>
    </div>
    <% }) %> 
</div>
